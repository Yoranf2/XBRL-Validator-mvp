<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:xbrli="http://www.xbrl.org/2003/instance"
           xmlns:xbrldt="http://xbrl.org/2005/xbrldt"
           xmlns:xbrldi="http://xbrl.org/2006/xbrldi"
           xmlns:link="http://www.xbrl.org/2003/linkbase"
           xmlns:xlink="http://www.w3.org/1999/xlink"
           targetNamespace="http://example.com/formula/2024"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">
    
    <xs:import namespace="http://www.xbrl.org/2003/instance" schemaLocation="http://www.xbrl.org/2003/xbrl-instance-2003-12-31.xsd"/>
    <xs:import namespace="http://xbrl.org/2006/xbrldi" schemaLocation="http://www.xbrl.org/2006/xbrldi-2006.xsd"/>
    <xs:import namespace="http://xbrl.org/2005/xbrldt" schemaLocation="http://www.xbrl.org/2005/xbrldt-2005.xsd"/>
    
    <!-- Simple Items -->
    <xs:element name="TotalAssets" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    <xs:element name="CurrentAssets" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    <xs:element name="NonCurrentAssets" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    <xs:element name="Revenue" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    <xs:element name="Expenses" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    <xs:element name="NetIncome" type="xbrli:monetaryItemType" substitutionGroup="xbrli:item" nillable="true"/>
    
    <!-- Dimensions -->
    <xs:element name="GeographyAxis" type="xbrldi:explicitMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    <xs:element name="BusinessSegmentAxis" type="xbrldi:explicitMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    <xs:element name="TimeAxis" type="xbrldi:explicitMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    
    <!-- Typed Dimensions (if applicable) -->
    <xs:element name="TypedDimension" type="xbrldi:typedMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    
    <!-- Hypercubes -->
    <xs:element name="MainHypercube" type="xbrldt:hypercubeItemType" substitutionGroup="xbrldt:hypercubeItem" nillable="true"/>
    
    <!-- Domain Members -->
    <xs:element name="GeographyDomain" type="xbrldi:explicitMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    <xs:element name="BusinessSegmentDomain" type="xbrldi:explicitMemberType" substitutionGroup="xbrldi:dimensionItem" nillable="true"/>
    
    <!-- Linkbase References -->
    <xs:annotation>
        <xs:appinfo>
            <link:linkbaseRef xlink:type="simple" xlink:arcrole="http://www.w3.org/1999/xlink/properties/linkbase" xlink:href="definition.xml" xlink:role="http://www.xbrl.org/2003/role/definitionLinkbaseRef"/>
            <link:linkbaseRef xlink:type="simple" xlink:arcrole="http://www.w3.org/1999/xlink/properties/linkbase" xlink:href="calculation.xml" xlink:role="http://www.xbrl.org/2003/role/calculationLinkbaseRef"/>
            <link:linkbaseRef xlink:type="simple" xlink:arcrole="http://www.w3.org/1999/xlink/properties/linkbase" xlink:href="formula.xml" xlink:role="http://www.xbrl.org/2003/role/formulaLinkbaseRef"/>
        </xs:appinfo>
    </xs:annotation>
    
</xs:schema>